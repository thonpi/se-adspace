{
  "compilerOptions": {
    "target": "ES6", // JavaScript version to compile to
    "module": "commonjs", // Module system to use (e.g., 'commonjs' or 'esnext')
    "outDir": "./dist", // Directory to output the compiled JavaScript files
    "rootDir": "./src", // Root directory of your TypeScript files
    "strict": true, // Enables strict type-checking options
    "skipLibCheck": true, // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensures consistent file name casing
    "moduleResolution": "node", // Strategy to resolve module paths
    "isolatedModules": true, // Ensures that each file can be safely transpiled independently
    "noEmitOnError": true, // Does not emit output if there are compilation errors
    "removeComments": true, // Removes comments from the output JavaScript files
    "allowJs": false, // Not allow JavaScript files to be compiled
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts" // Path to your TypeScript files
  ],
  "exclude": [
    "node_modules", // Excludes node_modules folder
    "**/*.spec.ts" // Excludes test files
  ]
}
